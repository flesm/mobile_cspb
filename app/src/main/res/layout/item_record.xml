<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tvId"         android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvCreatedAt"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvDistance"   android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvIsDecided"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnItemMarkAsDecided"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Decided"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
